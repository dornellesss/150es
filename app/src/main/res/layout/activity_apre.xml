<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ApreActivity">

    <Button
            android:text="@string/btnCadastar"
            android:layout_width="243dp"
            android:layout_height="51dp"
            android:background="@drawable/campobotao"
            android:id="@+id/btnCadastar"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="20sp" android:textColor="#FFFFFF" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="@string/btnLogin"
            android:layout_width="268dp"
            android:layout_height="55dp"
            android:id="@+id/btnLogin" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCadastar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/campobotao" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.496"/>
    <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="387dp"
            android:layout_height="363dp"
            android:id="@+id/linearLayout" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:text="Bem Vindo a Plataforma 150ESaude!"
                android:layout_gravity="center_horizontal"
                android:textColor="#077E73"
                android:layout_width="343dp"
                android:layout_height="wrap_content" android:id="@+id/txTitext01" android:textAlignment="center"
                android:textStyle="bold" android:textSize="30sp"/>
        <TextView
                android:padding="25dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorCaixatexto"
                android:layout_width="328dp"
                android:layout_height="313dp" android:id="@+id/txTexPag" android:text="@string/txTexPag"
                android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>