<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ApreActivity">

    <ImageButton
            android:layout_width="99dp"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/qrcode1"
            android:id="@+id/imbtnQrcode"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/btnCadastar"
            android:layout_width="161dp"
            android:layout_height="36dp"
            android:background="@drawable/campotexto"
            android:id="@+id/btnCadastar" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/imbtnQrcode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="20sp" android:textColor="#FFFFFF"/>
    <Button
            android:text="@string/btnLogin"
            android:layout_width="249dp"
            android:layout_height="36dp"
            android:id="@+id/btnLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCadastar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/campotexto" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="398dp"
            android:layout_height="325dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Bem Vindo a Plataforma 150ESaude!"
                android:background="@drawable/campotexto"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:layout_width="315dp"
                android:layout_height="wrap_content" android:id="@+id/txTitext01" android:textAlignment="center"
                android:textStyle="bold" android:textSize="25sp"/>
        <TextView
                android:padding="25dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorCaixatexto"
                android:layout_width="303dp"
                android:layout_height="233dp" android:id="@+id/txTexPag" android:text="@string/txTexPag"
                android:textAlignment="center" android:textStyle="bold" android:textSize="14sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>