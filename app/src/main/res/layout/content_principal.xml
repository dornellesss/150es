<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_principal"
        android:background="@color/colorFundo"
        tools:context=".PrincipalActivity">

    <TextView
            android:text="ComeÃ§e agora sua atividade!"
            android:layout_width="342dp"
            android:layout_height="47dp"
            android:background="@drawable/campotexto"
            android:orientation="vertical"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" app:layout_constraintHorizontal_bias="0.492" android:gravity="center"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="Escolha sua atividade"
            android:layout_width="292dp"
            android:layout_height="33dp"
            android:background="@drawable/campotexto"
            android:orientation="vertical"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.495" android:gravity="center"
            android:textColor="#FFFFFF"/>
    <Spinner
            android:layout_width="259dp"
            android:layout_height="42dp"
            android:id="@+id/spinner_itens_ati"
            android:entries="@array/Spinner_items"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/campospinner" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.493" android:gravity="center"
            android:padding="10dp"/>
    <Button
            android:text="@string/btnInicioAtivi"
            android:layout_width="237dp"
            android:layout_height="34dp"
            android:background="@drawable/campoamarelo"
            android:id="@+id/btnInicioAtivi" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_itens_ati" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" android:textColor="#FFFFFF" app:layout_constraintHorizontal_bias="0.5"
            android:textStyle="bold"/>
    <Button
            android:text="@string/btnFinalAtivi"
            android:layout_width="249dp"
            android:layout_height="38dp"
            android:background="@drawable/campovermelho"
            android:id="@+id/btnFinalAtivi" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnInicioAtivi" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center" android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    <TextView
            android:text="Tempo Total da Atividade"
            android:layout_width="272dp"
            android:layout_height="32dp"
            android:id="@+id/txTempoAt"
            android:background="@drawable/campotexto"
            app:layout_constraintTop_toBottomOf="@+id/btnFinalAtivi" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="18sp" android:gravity="center" android:textColor="#FFFFFF"/>
    <TextView
            android:text="Tempo Total Acumulado"
            android:layout_width="261dp"
            android:layout_height="31dp"
            android:id="@+id/txTempotoAcum"
            android:background="@drawable/campotexto"
            app:layout_constraintTop_toBottomOf="@+id/txTempoAt" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center" android:textStyle="bold"
            android:textSize="18sp" android:gravity="center" android:textColor="#FFFFFF"
    />
    <TextView
            android:text="@string/txtTexCalen"
            android:layout_width="319dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:background="@drawable/campotexto"
            android:id="@+id/txtTexCalen" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txTempotoAcum" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textStyle="bold" android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    <Button
            android:text="@string/btnCalendario"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:background="@drawable/campobotao"
            android:id="@+id/btnCalendario" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTexCalen" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textAlignment="center" android:textColor="#FFFFFF"/>


</androidx.constraintlayout.widget.ConstraintLayout>